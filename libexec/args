#!/usr/bin/env bash

interpret_args() {
  debug
  verbose
  version
  strategies
  force_deploy
}

# Run in verbose mode
#
verbose() {
  if [[ ! $ARGS =~ (-V|--verbose) ]]; then
    # silent mode (default)
    SILENCE="&> /dev/null"
  else
    # verbose mode
    VERBOSE=true
  fi
}

# Run in debug mode
#
debug() {
  if [[ $ARGS =~ (-D|--debug) ]]; then
    set -x
  fi
}

# Display the current version and exit
#
version() {
  if [[ $ARGS =~ (-v|--version) ]]; then
    echo "deliver v$VERSION ($HOMEPAGE)"
    exit 0
  fi
}

# Displays the existing deliver strategies
#
strategies() {
  if [[ $ARGS =~ (-s|--strategies) ]]; then
    echo "$STRATEGIES"
    exit 0
  fi
}

# Force a deploy even if revisions are the same.
#
force_deploy() {
  if [[ $ARGS =~ (-f|--force) ]]; then
    FORCE=true
  fi
}
